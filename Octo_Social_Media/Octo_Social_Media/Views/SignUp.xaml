<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Octo_Social_Media.Views.SignUp">
    <ContentPage.Content>
        <StackLayout            
            BackgroundColor="MintCream"
            Spacing="0"
            Padding="5,5,5,5">

            <ScrollView>

                <Grid
                    RowSpacing="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label/>

                    <Label 
                        Text="Sign Up"
                        FontSize="50"
                        TextColor="Green"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="1"/>

                    <Label
                        Text="First Name"
                        TextColor="Green"
                        FontSize="25"
                        Grid.Row="3"
                        Grid.Column="0"/>

                    <Entry
                        Placeholder="First name here"
                        PlaceholderColor="Green"
                        Opacity="0.5"
                        ClearButtonVisibility="WhileEditing"
                        Grid.Row="4"
                        Grid.Column="0"/>

                    <Label
                        Text="Last Name"
                        TextColor="Green"
                        Padding="5,0,0,0"
                        FontSize="25"
                        Grid.Row="3"
                        Grid.Column="1"/>

                    <Entry
                        Placeholder="Last name here"
                        PlaceholderColor="Green"
                        Opacity="0.5"
                        ClearButtonVisibility="WhileEditing"
                        Grid.Row="4"
                        Grid.Column="1"/>

                    <Label
                        Text="Email"
                        TextColor="Green"
                        FontSize="25"
                        Grid.Row="6"
                        Grid.Column="0"/>

                    <Entry
                        Placeholder="Email here"
                        PlaceholderColor="Green"
                        Opacity="0.5"
                        ClearButtonVisibility="WhileEditing"
                        Grid.Row="7"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"/>

                    <Label
                        Text="Username"
                        TextColor="Green"
                        Padding="5,0,0,0"
                        FontSize="25"
                        Grid.Row="9"
                        Grid.Column="0"/>

                    <Entry
                        Placeholder="Username here"
                        PlaceholderColor="Green"
                        Opacity="0.5"
                        ClearButtonVisibility="WhileEditing"
                        Grid.Row="10"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"/>


                    <Label
                        Text="Password"
                        TextColor="Green"
                        FontSize="25"
                        Grid.Row="12"
                        Grid.Column="0"/>

                    <Entry
                        Placeholder="Password here"
                        PlaceholderColor="Green"
                        Opacity="0.5"
                        ClearButtonVisibility="WhileEditing"
                        IsPassword="True"
                        Grid.Row="13"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"/>

                    <Button
                        Text="Sign Up"
                        Style="{StaticResource ButtonStyleCaitlin}"
                        Grid.Row="15"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"/>

                </Grid>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>